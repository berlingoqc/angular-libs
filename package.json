{
    "name": "@berlingoqc/ng-lib",
    "description": "Project for all of @berlingoqc librairies",
    "version": "2.1.0",
    "scripts": {
        "build:all": "ng build common && ng build loopback && ng build autoform && ng build autotable && ng build notification && ng build pwa",
        "build:all:prod": "ng build --prod common && ng build --prod loopback && ng build --prod autoform && ng build --prod autotable",
        "build:demo": "ng build --prod demo",
        "publishversion": "cd projects/$NAME/ && npm version $TYPE && cd ../../ && ng build --prod $NAME && cd dist/$NAME && npm publish",
        "postpublishversion": "./scripts/publish.sh",
        "documentation": "compodoc -p ./tsconfig.json",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "formatting:check": "prettier --check .",
        "formatting:write": "prettier --write .",
        "version": "node -p \"require('./package.json').version\""
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/berlingoqc/angular-libs/"
    },
    "private": false,
    "dependencies": {
        "@angular/animations": "^11.1.1",
        "@angular/cdk": "^11.1.1",
        "@angular/common": "^11.1.1",
        "@angular/compiler": "^11.1.1",
        "@angular/core": "^11.1.1",
        "@angular/forms": "^11.1.1",
        "@angular/material": "^11.1.1",
        "@angular/platform-browser": "^11.1.1",
        "@angular/platform-browser-dynamic": "^11.1.1",
        "@angular/router": "^11.1.1",
        "@angular/service-worker": "^11.1.1",
        "@auth0/angular-jwt": "^5.0.2",
        "@ngx-translate/core": "^13.0.0",
        "@ngx-translate/http-loader": "^6.0.0",
        "ngx-permissions": "^8.1.1",
        "object-hash": "^2.1.1",
        "prismjs": "^1.23.0",
        "rxjs": "^6.6.0",
        "tslib": "^2.0.0",
        "zone.js": "^0.10.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^0.1101.1",
        "@angular-devkit/core": "^11.1.1",
        "@angular/cli": "^11.1.1",
        "@angular/compiler-cli": "^11.1.1",
        "@angular/language-service": "^11.1.1",
        "@types/jasmine": "~3.6.0",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "^12.12.38",
        "jasmine-core": "~3.6.0",
        "jasmine-spec-reporter": "~5.0.0",
        "karma": "^5.1.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~2.0.1",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "^1.5.0",
        "ng-packagr": "^11.1.2",
        "prettier": "^2.1.2",
        "protractor": "^7.0.0",
        "ts-node": "~7.0.0",
        "tslint": "~6.1.0",
        "typescript": "~4.1.3"
    }
}
